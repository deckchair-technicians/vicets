{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es6",
    "module":"es2015",
    "lib": ["es2015","es2017"],
    "sourceMap": true,
    "declaration": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "dist/types",
    "outDir": "dist/lib",
    "typeRoots": [
      "node_modules/@types"
    ],
    "skipLibCheck": true
  },
  "include": [
    "src"
  ]
}
